@model BandFinder.Models.ConcertForm
@{
    Layout = "_CMS";
}
<h1>@Model.Venue</h1>


<form asp-controller="CMS" asp-action="UpdateConcert">
    <input type="hidden" name="ConcertID" value="@Model.ConcertID" />
    <div>
        <label>Venue</label>
        <input asp-for="Venue" />
        <span asp-validation-for="Venue" class="error"></span>
    </div>

    <div>
        <label asp-for="Address">Address</label>
        <input type="text"asp-for="Address" />
    </div>

    <div>
        <label asp-for="PostCode">PostCode</label>
        <input type="text" asp-for="PostCode" />
    </div>

    <div>
        <label asp-for="Area">Area</label>
        <input type="text" asp-for="Area" />
    </div>

    <div>
        <label asp-for="Date">Date</label>
        <input type="date" asp-for="Date" />
    </div>

    <div>
        <label asp-for="Time">Time</label>
        <input type="time" asp-for="Time" />
    </div>

    <div>
        <label asp-for="Price">Price</label>
        <input type="text" asp-for="Price" />
    </div>

    <div>
        <label asp-for="RemainingTickets">Tickets Remaining</label>
        <input type="number" asp-for="RemainingTickets" />
    </div>

    <div>
        <input type="submit" value="Update" class="edit" />
    </div>

</form>

